<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        tools:context=".activity.MainActivity"
        android:orientation="vertical">

    <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:cpv_color="#2196F3"
            app:cpv_indeterminate="true" app:cpv_animAutostart="true"
            app:cpv_thickness="18dp"
            android:visibility="gone"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название анимации"
            android:gravity="center"
            android:layout_gravity="top"
            android:id="@+id/hintsearch"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/minefont"
            android:inputType="textImeMultiLine"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Страница"
            android:id="@+id/textnumber"
            android:fontFamily="@font/minefont"
            android:padding="5dp"
            android:textSize="10sp"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GifRecycler"

    />


</LinearLayout>


